{
    "name":"netzmacht/contao-dom-manipulator",
    "description":"This extension integrates the PHP dom manipulator into Contao.",
    "keywords":["contao", "dom", "html", "document", "manipulate"],
    "type":"contao-module",
    "license":"LGPL-3.0+",
    "authors":[
        {
            "name":"David Molineus",
            "email":"mail@netzmacht.de",
            "homepage":"http://www.netzmacht.de",
            "role":"Developer"
        }
    ],
    "require":{
        "php":">=5.3.2",
        "contao/core":">=3.2.13,<3.5-dev",
        "contao-community-alliance/composer-plugin":"~2.0",
        "contao-community-alliance/dependency-container":"~1.0",
        "contao-community-alliance/event-dispatcher":"~1.0",
        "netzmacht/php-dom-manipulator": "~1.0",
        "symfony/stopwatch":"~2.5"
    },
    "require-dev": {
        "phpspec/phpspec": "2.1.x-dev",
        "henrikbjorn/phpspec-code-coverage" : "~0.2",
        "netzmacht/contao-build-tools": "1.0.x-dev"
    },
    "autoload": {
        "psr-0": {
            "Netzmacht\\Contao\\DomManipulator\\": "src"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "contao": {
            "sources":{
                "module": "system/modules/dom-manipulator"
            }
        },
        "branch-alias": {
            "dev-develop": "1.0.x-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
